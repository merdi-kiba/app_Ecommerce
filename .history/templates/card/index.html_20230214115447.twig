{% extends 'base.html.twig' %}

{% block title %}Hello CardController!
{% endblock %}

{% block body %}
	<div class="text-center">
		votre panier
	</div>

	<table>
		<thead>
			<tr>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantite</th>
				<th>Total</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for element in dataPanier %}

				<tr>{{ element.produit.name}}
				</tr>
				<tr>{{element.produit.price}}
					$</tr>
				<tr>{{ element.quantite}}
				</tr>
				<tr class="text-right">{{element.quantite * element.produit.price}}
					$</tr>
				<tr>
					<a href="{{path("cart_add", {id:element.produit.id})}}" class="btn btn-success">
						<i class="bi bi-cart-plus"></i>
					</a>
					<a href="{{path("cart_add", {id:element.produit.id})}}" class="">
						<i class="bi bi-cart-plus"></i>
					</a>

				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="text-center">
						votre  panier est vide
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
